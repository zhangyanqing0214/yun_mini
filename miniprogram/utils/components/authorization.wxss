.a-page {
  position: fixed;
  top: 30%;
  left: 10%;
  z-index: 999999; 
  background-color: white;
  width: 80%;
  border-radius: 20rpx;
}

.a-authorization-title {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: rgb(0, 0, 0);
  border-bottom: 1px solid rgb(227, 227, 227);
  padding: 20rpx 0rpx;
}
.a-authorization-body{
  width: 100%;
  padding: 70rpx 0rpx;
  border-bottom: 1px solid rgb(227, 227, 227);
}
.a-authorization-body-text{
  width: 100%;
  font-size: 26rpx;
  color: rgb(155, 155, 155);
  text-align: center;
  margin-bottom: 20rpx;
}
.a-authorization-btus{
  width: 100%;
  display: flex;
}
.a-authorization-btus-close{
  font-size: 34rpx;
  color: rgb(155, 155, 155);
  width: 50%;
  text-align: center;
  border-right: 1px solid rgb(227, 227, 227);
  letter-spacing: 48rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.a-authorization-btus-OK{
  margin: 0;
  border: 0;
  font-size: 34rpx;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
}